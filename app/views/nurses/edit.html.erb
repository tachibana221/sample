<h3>看護師登録</h3>
<%= link_to("一覧へ戻る", "/nurses") %>
<%# エラー表示 %>
<div class="col">
  <% @nurse.errors.full_messages.each do |message|%>
    <blockquote>
      <%= message %>
    </blockquote>
  <% end %>

  <%# 編集フォーム %>
  <%= form_with model: @nurse do |form| %>
    <div class="form-group">
      <%= form.label :"名前", class:"active"%>
      <%= form.text_field :name, class: "form-control", id: "name" %>
    </div>
    <div class="form-group">
      <%= form.label :"名前(かな)", class:"active"%>
      <%= form.text_field :name_kana, class: "form-control", id: "name_kana" %>
    </div>
    <div class="form-group">
      <%= form.label :"パスワード"%>
      <%= form.text_field :password, class: "form-control", id: "password"  %>
    </div>
    <div class="form-group">
      <%= form.label :"パスワード(確認)"%>
      <%= form.text_field :password_confirmation, class: "custom-select", id: "password_confirmation"  %>
    </div>
    <%= form.submit :"更新", class:"btn btn-primary" %>
  <% end %>
</div>
