<h3>コメント編集</h3>
<%# エラー表示 %>
<div class="col">
  <% @comment.errors.full_messages.each do |message|%>
    <div class="alert alert-danger" role="alert">
      <%= message %>
    </div>
  <% end %>

<%= link_to("編集ページに戻る", "/bedsores/#{@comment.bedsore.id}/paint") %>
  <%# 編集フォーム %>
  <%= form_with model: @comment, local: true do |form| %>
    <div class="form-group">
      <%= form.label :"テキスト", class:"active"%>
      <%= form.text_field :text, class: "form-control", id: "name" %>
    </div>
    <div class="form-group">
      <%= form.label :"x座標"%>
      <%= form.number_field :position_x, class: "form-control"  %>
    </div>
    <div class="form-group">
      <%= form.label :"y座標"%>
      <%= form.number_field :position_y, class: "form-control"  %>
    </div>
    <%= form.submit :"更新", class:"btn btn-primary" %>
  <% end %>
</div>
