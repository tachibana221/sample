<h3>ケア物品情報編集</h3>
<%= link_to("一覧へ戻る", "/care_tools", class: "btn btn-link") %>
<%# エラー表示 %>
<div class="col">
  <% @tool.errors.full_messages.each do |message|%>
    <div class="alert alert-danger" role="alert">
      <%= message %>
    </div>
  <% end %>

  <%# 編集フォーム %>
  <%= form_with model: @tool, local: true do |form| %>
    <div class="form-group">
      <%= form.label :"名前 *", class:"active"%>
      <%= form.text_field :name, class: "form-control", id: "name" %>
    </div>
    <div class="form-group">
      <%= form.label :"種類"%>
      <%= form.select :genre, CareTool.genres.keys.to_a, {}, { class: "custom-select" } %>
    </div>
    <%= form.submit :"更新", class:"btn btn-primary" %>
  <% end %>
</div>
