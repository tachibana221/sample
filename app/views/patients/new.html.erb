<h3>療養者新規登録</h3>
<%= link_to("一覧へ戻る", "/patients", class: "btn btn-link") %>
<div class="col">
  <%# エラー表示 %>
  <% @patient.errors.full_messages.each do |message|%>
    <div class="alert alert-danger" role="alert">
      <%= message %>
    </div>
  <% end %>

  <%# 登録フォーム %>
  <%= form_with model: @patient, local: true do |form| %>
    <div class="form-group">
      <%= form.label :"名前"%>
      <%= form.text_field :name, class: "form-control", id: "name" %>
    </div>
    <div class="form-group">
      <%= form.label :"名前(かな)"%>
      <%= form.text_field :name_kana, class: "form-control", id: "name_kana" %>
    </div>
    <div class="form-group">
      <%= form.label :"年齢"%>
      <%= form.number_field :age, class: "form-control", id: "age"  %>
    </div>
    <div class="form-group">
      <%= form.label :"性別"%>
      <%= form.select :sex, Patient.sexes.keys.to_a, {}, { class: "custom-select" } %>
    </div>
    <div class="form-group">
      <%= form.label :"トピック"%>
      <%= form.text_area :topics, class: "form-control", id: "name_kana" %>
    </div>
    <div class="form-group custom-file">
      <%= form.file_field :image,  id: "image" %>
    </div>
    <%= form.submit :"登録", class:"btn btn-primary" %>
  <% end %>
</div>
