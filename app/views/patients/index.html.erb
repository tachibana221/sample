<h3>療養者一覧</h3>
<div class="mt-1 mb-2">
  <%= link_to("療養者新規登録", "/patients/new", class: "btn btn-primary") %>
</div>
<div class="list-group">
  <% @patients.each do |patient| %>
    <div class="list-group-item d-flex justify-content-between align-items-center">
      <%= link_to("#{patient.name} (#{patient.name_kana})", "/patients/#{patient.id}", class:"") %>
      <div>
        <%= link_to("個人ページ", "/patients/#{patient.id}", class:"btn btn-info btn-sm") %>
        <%= link_to("削除", "/patients/#{patient.id}", method: :delete, data: {confirm: "本当に削除しますか？"}, class:"btn btn-danger btn-sm") %>
      </div>
    </div>
  <% end %>
</div>