<h3>療養者一覧</h3>
<div class="mt-1 mb-2">
  <%= link_to("療養者新規登録", "/patients/new", class: "btn btn-primary") %>
</div>
<table class="table table-bordered">
  <thead>
    <tr>
      <th scope="col">番号</th>
      <th scope="col">名前</th>
      <th scope="col">かな</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% @patients.each do |patient| %>
      <tr>
        <th scope="row"><%= patient.id %></th>
        <td><%= patient.name %></td>
        <td><%= patient.name_kana %></td>
        <td>      
          <div class="container">
            <%= link_to("個人ページ", "/patients/#{patient.id}", class:"btn btn-info btn-sm ") %>
            <%= link_to("削除", "/patients/#{patient.id}", method: :delete, data: {confirm: "本当に削除しますか？"}, class:"btn btn-danger btn-sm") %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>